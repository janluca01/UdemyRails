<h2 align="center"> All Alpha-Blog users </h2>

<% @users.each do |user| %>
<div align="center">
	<%= will_paginate @users, renderer: BootstrapPagination::Rails%>
	<ul class="listing">
		<div class="row" >
			<div class="col-md-4 col-md-offset-4">
				<div class="well well-lg">
					<li>
						<%= link_to gravatar_for(user), user_path(user) %>
					</li>
					<li class="article-title">
						<%= link_to user.username, user_path(user) %>
					</li>
					<li>
						<small>
							<%= pluralize(user.articles.count, "article") if user.articles %>
						</small>
					</li>
					<% if logged_in? and current_user.admin? %>
						<li>

							<%= link_to "Delete user", user_path(user), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: "Are you sure you wanna do that?"} %>
                        </li>
					<% end %>
				</div>
			</div>
		</div>
	</ul>
	<%= will_paginate @users, renderer: BootstrapPagination::Rails%>
</div>

<% end %>