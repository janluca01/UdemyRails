<%= render 'shared/errors' %>
<div class="panel panel-default">
	<div class="panel-body">
		<%= form_for @article do |f| %>

		<div class="form-group">
			<%= f.label :title %> 
			<%= f.text_field :title, class: "form-control", placeholder: "Title of your article" %>
		</div>

		<div class="form-group">
			<%= f.label :description %> 
			<%= f.text_area :description, class: "form-control", placeholder: "Description of your article" %>
		</div>

		<%= f.submit class: "btn btn-success btn-md"%>

		<% end %>

		<%= link_to "Back", articles_path, class: "btn btn-default spacing" %>
	</div>
</div>

