<% if obj.errors.any? %>
	<div class="alert alert-danger panel-body" role="alert">
	<h2 class="panel-title" style="text-align:center" > The following errors occured </h2><%= pluralize(obj.errors.count, "error") %>
		<ul>
			<% obj.errors.full_messages.each do |msg|%>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>
